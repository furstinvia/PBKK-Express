    <!-- END HERO SECTION -->

    <!-- CONTACT SECTION -->
    <div class="section">
        <div class="container">
            <div class="row">
                <!-- Contact Info -->
                <div class="col-4 col-md-12">
                    <div class="contact-info" style="background-color: rgba(0,0,0,0.8); padding: 30px; border-radius: 20px; margin-bottom: 30px;">
                        <h3 style="color: var(--main-color); margin-bottom: 20px;">Contact Information</h3>
                        
                        <!-- Phone -->
                        <div style="display: flex; align-items: center; margin-bottom: 20px;">
                            <i class='bx bx-phone' style="font-size: 1.5em; color: var(--main-color); margin-right: 15px;"></i>
                            <div>
                                <h4 style="color: #fff; margin-bottom: 5px;">Phone</h4>
                                <p style="color: var(--text-color);">+123-456-7890</p>
                            </div>
                        </div>

                        <!-- Email -->
                        <div style="display: flex; align-items: center; margin-bottom: 20px;">
                            <i class='bx bx-envelope' style="font-size: 1.5em; color: var(--main-color); margin-right: 15px;"></i>
                            <div>
                                <h4 style="color: #fff; margin-bottom: 5px;">Email</h4>
                                <p style="color: var(--text-color);">hello@powerpuffcinema.com</p>
                            </div>
                        </div>

                        <!-- Address -->
                        <div style="display: flex; align-items: center; margin-bottom: 20px;">
                            <i class='bx bx-map' style="font-size: 1.5em; color: var(--main-color); margin-right: 15px;"></i>
                            <div>
                                <h4 style="color: #fff; margin-bottom: 5px;">Location</h4>
                                <p style="color: var(--text-color);">123 Anywhere St., Any City</p>
                            </div>
                        </div>

                        <!-- Working Hours -->
                        <div style="display: flex; align-items: center; margin-bottom: 20px;">
                            <i class='bx bx-time' style="font-size: 1.5em; color: var(--main-color); margin-right: 15px;"></i>
                            <div>
                                <h4 style="color: #fff; margin-bottom: 5px;">Working Hours</h4>
                                <p style="color: var(--text-color);">Mon - Sun: 10:00 AM - 11:00 PM</p>
                            </div>
                        </div>

                        <!-- Social Media -->
                        <div style="margin-top: 30px;">
                            <h4 style="color: #fff; margin-bottom: 15px;">Follow Us</h4>
                            <div style="display: flex; gap: 15px;">
                                <a href="#" style="color: var(--main-color); font-size: 1.5em;"><i class='bx bxl-facebook'></i></a>
                                <a href="#" style="color: var(--main-color); font-size: 1.5em;"><i class='bx bxl-twitter'></i></a>
                                <a href="#" style="color: var(--main-color); font-size: 1.5em;"><i class='bx bxl-instagram'></i></a>
                                <a href="#" style="color: var(--main-color); font-size: 1.5em;"><i class='bx bxl-youtube'></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="col-8 col-md-12">
                    <div style="background-color: rgba(0,0,0,0.8); padding: 30px; border-radius: 20px;">
                        <h3 style="color: var(--main-color); margin-bottom: 20px;">Send us a Message</h3>
                        <form>
                            <div style="margin-bottom: 20px;">
                                <label style="color: #fff; display: block; margin-bottom: 8px;">Name</label>
                                <input type="text" style="width: 100%; padding: 12px; border-radius: 8px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); color: #fff;">
                            </div>
                            <div style="margin-bottom: 20px;">
                                <label style="color: #fff; display: block; margin-bottom: 8px;">Email</label>
                                <input type="email" style="width: 100%; padding: 12px; border-radius: 8px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); color: #fff;">
                            </div>
                            <div style="margin-bottom: 20px;">
                                <label style="color: #fff; display: block; margin-bottom: 8px;">Subject</label>
                                <input type="text" style="width: 100%; padding: 12px; border-radius: 8px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); color: #fff;">
                            </div>
                            <div style="margin-bottom: 20px;">
                                <label style="color: #fff; display: block; margin-bottom: 8px;">Message</label>
                                <textarea style="width: 100%; padding: 12px; border-radius: 8px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); color: #fff; min-height: 150px;"></textarea>
                            </div>
                            <button type="submit" class="btn btn-hover" style="width: 100%; padding: 12px;">
                                <span>Send Message</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Map Section -->
            <div style="margin-top: 40px;">
                <div style="background-color: rgba(0,0,0,0.8); padding: 30px; border-radius: 20px;">
                    <h3 style="color: var(--main-color); margin-bottom: 20px;">Find Us</h3>
                    <div style="width: 100%; height: 400px; border-radius: 8px; overflow: hidden;">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.2834493276227!2d106.83881367355994!3d-6.225428662709898!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f3f3e3a94f85%3A0xe37f03c30c1f468d!2sFX%20Sudirman!5e0!3m2!1sen!2sid!4v1704821180020!5m2!1sen!2sid" 
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTACT SECTION -->

