          <li><a href="/theaters">Theatres</a></li>
          <li><a href="/buy-ticket">Buy Tickets</a></li>
          <li><a href="/admin">ADMIN</a></li>
          <li>
            <a href="#" class="btn btn-hover buy-ticket-btn">
              <span>Log Out</span>
            </a>
          </li>
        </ul>
        <div class="hamburger-menu" id="hamburger-menu">
          <div class="hamburger"></div>
        </div>
      </div>
    </div>
  </div>
  <!-- END NAVBAR -->

  <!-- MAIN CONTENT -->
  <div class="form-container">
    <h1><%= title %></h1>
    
    <form action="/buy-ticket" method="POST" class="form">
      <input type="hidden" name="id" value="<%= booking.id || '' %>">
      <input type="text" name="name" placeholder="Name" required value="<%= booking.name || '' %>" class="input">
      
      <!-- Movie Dropdown -->
      <select name="movie_id" required class="input">
        <option value="">Select Movie</option>
        <% movies.forEach(movie => { %>
          <option value="<%= movie.id %>" <%= booking.movie_id === movie.id ? 'selected' : '' %>>
            <%= movie.title %>
          </option>
        <% }) %>
      </select>
      
      <!-- Theater Dropdown -->
      <select name="theater_id" required class="input">
        <option value="">Select Theater</option>
        <% theaters.forEach(theater => { %>
          <option value="<%= theater.id %>" <%= booking.theater_id === theater.id ? 'selected' : '' %>>
            <%= theater.name %>
          </option>
        <% }) %>
      </select>
      
      <input type="date" name="booking_date" required value="<%= booking.booking_date || '' %>" class="input">
      <input type="number" name="seats" placeholder="Seats" required value="<%= booking.seats || '' %>" class="input">
      <button type="submit" class="button"><%= booking.id ? 'Update' : 'Add' %> Booking</button>
    </form>

    <!-- Bookings Table -->
    <table class="booking-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Movie</th>
          <th>Theater</th>
          <th>Booking Date</th>
          <th>Seats</th>
          
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.name %></td>
            <td><%= booking.movie_title %></td>
            <td><%= booking.theater_name %></td>
            <td><%= booking.booking_date %></td>
            <td><%= booking.seats %></td>
            
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <!-- END MAIN CONTENT -->

